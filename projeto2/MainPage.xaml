<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projeto2.MainPage"
             Shell.NavBarIsVisible="false">


     <Grid>
       
           <Grid.RowDefinitions>
                     <RowDefinition Height="*"/>
                     <RowDefinition Height="100"/>
                     <RowDefinition Height="100"/>
                     <RowDefinition Height="*"/>
              </Grid.RowDefinitions>
              <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="160"/>
                     <ColumnDefinition Width="160"/>
                     <ColumnDefinition Width="160"/>
              </Grid.ColumnDefinitions>

    
        <Image  Source="nice.jpg"
               Aspect="Fill"
               VerticalOptions="Fill"
               HorizontalOptions="Fill"
               Grid.RowSpan="3"
               Grid.ColumnSpan="4"
               />

  <Frame x:Name="ahnn"
                           BackgroundColor="#77ffffff"
                           BorderColor="Transparent"
                           Grid.Row="1"
                           Grid.Column="0"
                           Grid.RowSpan="2"
                           CornerRadius="35"
                           Margin="5, 0">

                            <VerticalStackLayout>

                                   <Label TextColor="Black"
                                          x:Name="LabelTemperatura"
                                          FontSize="40"
                                          Margin="5,20"/>

                                   <Label TextColor="Black"
                                          x:Name="LabelTempo"
                                          FontSize="13"
                                          Margin="5"/>

                                   <Label Text="Apucarana"
                                          TextColor="Black"
                                          Margin="5,10"
                                          x:Name="LabelCidade"/>

                            </VerticalStackLayout>
                     </Frame>
                     <Frame x:Name="dois"
                           BackgroundColor="#77ffffff"
                           BorderColor="Transparent"
                           CornerRadius="35"
                           Grid.Row="1"
                           Grid.Column="1">
                            <Grid>
                                   <Grid.RowDefinitions>
                                   <RowDefinition Height="*"/>
                                   <RowDefinition Height="*"/>
                                   </Grid.RowDefinitions>
                                   <Grid.ColumnDefinitions>
                                   <ColumnDefinition Width="*"/>
                                   <ColumnDefinition Width="20"/>
                                   </Grid.ColumnDefinitions>

                                   <Label Text="Chuva:"
                                          TextColor="Black"
                                          FontSize="14"
                                          Grid.Row="0"
                                          Grid.Column="0"/>
                                   
                                   <Label TextColor="Black"
                                          FontSize="14"
                                          x:Name="LabelChuva"
                                          Grid.Row="0"
                                          Grid.Column="1"/> 

                                   <Label Text="Humidade:"
                                          TextColor="Black"
                                          FontSize="14"
                                          Grid.Row="1"
                                          Grid.Column="0"/>

                                   <Label TextColor="Black"
                                          FontSize="14"
                                          x:Name="LabelHumidade"
                                          Grid.Row="1"
                                          Grid.Column="1"/>
                            </Grid>
                     </Frame>

                     <Frame x:Name="tres"
                           BackgroundColor="#77ffffff"
                           BorderColor="Transparent"
                           CornerRadius="35"
                           Grid.Row="2"
                           Grid.Column="1">
                            <Grid>
                                   <Grid.RowDefinitions>
                                   <RowDefinition Height="20"/>
                                   <RowDefinition Height="*"/>
                                   <RowDefinition Height="*"/>
                                   </Grid.RowDefinitions>
                                   <Grid.ColumnDefinitions>
                                   <ColumnDefinition Width="81"/>
                                   <ColumnDefinition Width="45"/>
                                   </Grid.ColumnDefinitions>

                                   <Label Text="Sol"
                                          TextColor="Black"
                                          FontSize="18"
                                          HorizontalTextAlignment="Center"
                                          Grid.Row="0"
                                          Grid.Column="0"
                                          Grid.ColumnSpan="2"/>
                                   
                                   <Label Text="Amanhecer:"
                                          TextColor="Black"
                                          FontSize="14"
                                          Grid.Row="1"
                                          Grid.Column="0"/> 

                                   <Label TextColor="Black"
                                          x:Name="LabelAmanhecer"
                                          FontSize="14"
                                          Grid.Row="1"
                                          Grid.Column="1"/>

                                   <Label Text="Anoitecer:"
                                          TextColor="Black"
                                          FontSize="14"
                                          Grid.Row="2"
                                          Grid.Column="0"/>

                                   <Label TextColor="Black"
                                          x:Name="LabelAnoitecer"
                                          FontSize="14"
                                          Grid.Row="2"
                                          Grid.Column="1"/>
                            </Grid>
                     </Frame>



                     <Frame x:Name="quatro"
                           BackgroundColor="#77ffffff"
                           BorderColor="Transparent"
                           CornerRadius="35"
                           Grid.Row="1"
                           Grid.Column="2">
                            <Grid>
                                   <Grid.RowDefinitions>
                                   <RowDefinition Height="*"/>
                                   <RowDefinition Height="*"/>
                                   <RowDefinition Height="*"/>
                                   </Grid.RowDefinitions>
                                   <Grid.ColumnDefinitions>
                                   <ColumnDefinition Width="60"/>
                                   <ColumnDefinition Width="30"/>
                                   </Grid.ColumnDefinitions>

                                   <Label Text="Vento"
                                          TextColor="Black"
                                          HorizontalTextAlignment="Center"
                                          Grid.Row="0"
                                          Grid.Column="0"
                                          Grid.ColumnSpan="2"/>
                                   
                                   <Label Text="Força:"
                                          TextColor="Black"
                                          FontSize="14"
                                          Grid.Row="1"
                                          Grid.Column="0"/> 

                                   <Label TextColor="Black"
                                          x:Name="LabelForca"
                                          FontSize="14"
                                          Grid.Row="1"
                                          Grid.Column="1"/>

                                   <Label Text="Direção:"
                                          TextColor="Black"
                                          FontSize="14"
                                          Grid.Row="2"
                                          Grid.Column="0"/>

                                   <Label TextColor="Black"
                                          x:Name="LabelDirecao"
                                          FontSize="14"
                                          Grid.Row="2"
                                          Grid.Column="1"/>
                            </Grid>
                     </Frame>
    


                     <Frame x:Name="cinco"
                           BackgroundColor="#77ffffff"
                           BorderColor="Transparent"
                           CornerRadius="35"
                           Grid.Row="2"
                           Grid.Column="2">
                            <Grid>
           <Grid.RowDefinitions>
           <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
              <Grid.ColumnDefinitions>
               <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="80"/>
             </Grid.ColumnDefinitions>
                                   
                                   <Label Text="Lua"
                                          TextColor="Black"
                                          HorizontalTextAlignment="Center"     
                                          Grid.Row="0"
                                          Grid.Column="0"
                                          Grid.ColumnSpan="2"/>
                                   
                                   <Label Text="Fase:"
                                          TextColor="Black"
                                          FontSize="14"
                                          Grid.Row="1"
                                          Grid.Column="0"/> 

             <Label TextColor="Black"
              x:Name="LabelFase"
               FontSize="14"
              Grid.Row="1"
              Grid.Column="1"/>

 </Grid>
       </Frame>

              <Frame Grid.Row="3"
              Grid.Column="0"
              Grid.ColumnSpan="3"
             BackgroundColor="#77ffffff"
             BorderColor="Transparent"
              Margin="5">
                
              </Frame>

</Grid>
</ContentPage>
